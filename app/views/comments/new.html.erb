<div class="comment-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @comment do |f| %>
          <div class="form-group">
            <%= f.label :コメント投稿 %>
            <%= f.text_area :user_comment, class: 'form-control' %>
            <%= f.hidden_field :topic_id, :value => @topic_id %>
          </div>
          <% if logged_in? %>
            <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>